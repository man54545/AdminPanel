<%- include('header') %>

<section class="pcoded-main-container p-5">
    <div >
        <!-- [ breadcrumb ] start -->
     
        <div class="row">
            <div class="col-lg-12">
                <form action="/hod/editData" enctype="multipart/form-data" method="post">
                    <input type="hidden" name="editId" value="<%= hod.id %>">
                    <div class="form-floating d-flex align-items-center">
                        <label class="floatingInput mb-0" style="margin-right: 20px;">Enter Your Name :-</label>
                        <input type="text" class="form-control border-0" value="<%= hod.name %>" style="box-shadow: none; width: 30%;" placeholder="Name" name="name">
                    </div><br>
                    <div class="form-floating d-flex align-items-center">
                        <label class="floatingInput mb-0" style="margin-right: 20px;">Enter Your Email :-</label>
                        <input type="email" class="form-control border-0" value="<%= hod.email %>" style="box-shadow: none; width: 30%;" placeholder="E-mail" name="email">
                    </div><br>
                    <div class="form-floating d-flex align-items-center">
                        <label class="floatingInput mb-0" style="margin-right: 20px;">Select Your Gender :-</label>
                        <input type="radio" name="gender" value="male" <% if(hod.gender == "male") { %> <%= "checked" %> <% } %>>Male
                        <input type="radio" name="gender" value="female" <% if(hod.gender == "female") { %> <%= "checked" %> <% } %>>Female
                    </div><br>
                    <div class="form-floating d-flex align-items-center">
                        <label class="floatingInput mb-0" style="margin-right: 20px;">Select Your Date of Birth :-</label>
                        <input type="date" class="form-control border-0" value="<%= hod.dob %>" style="box-shadow: none; width: 30%;" name="dob">
                    </div><br>
                    <div class="form-floating d-flex align-items-center">
                        <label class="floatingInput mb-0" style="margin-right: 20px;">Enter Your Phone :-</label>
                        <input type="tel" class="form-control border-0" value="<%= hod.phone %>" style="box-shadow: none; width: 30%;" placeholder="Phone" name="phone">
                    </div><br>
                    <div class="form-floating d-flex align-items-center">
                        <label class="floatingInput mb-0" style="margin-right: 20px;">Enter Your Education :-</label>
                        <input type="text" class="form-control border-0" value="<%= hod.education %>" style="box-shadow: none; width: 30%;" name="education" placeholder="Education">
                    </div><br>
                    <% var department = ["BE/B.Tech- Bachelor of Technology", "B.Arch- Bachelor of Architecture", "BCA- Bachelor of Computer Applications", "B.Sc.- Information Technology", "BPharma- Bachelor of Pharmacy", "B.Sc- Interior Design"]; %>
                    <div class="form-floating d-flex align-items-center">
                        <label class="floatingInput mb-0" style="margin-right: 20px;">Select Your Department :-</label>
                        <select name="department" class="form-control" style="box-shadow: none; width: 30%;">
                            <option value="">-- Select Your Department -- </option>
                            <% department.forEach((v, i) => { %>
                            <option value="<%= v %>" <% if(hod.department == v) { %> <%= "selected" %> <% } %>><%= v %></option>
                            <% }); %>
                        </select>
                    </div><br>
                    <div class="form-floating d-flex align-items-center">
                        <label class="floatingInput mb-0" style="margin-right: 20px;">Select Your Avatar :-</label>
                        <input type="file" class="form-control border-0" style="box-shadow: none; width: 30%;" placeholder="Avatar" name="avatar"><br>
                        <img src="<%= hod.avatar %>" width="200px" height="200px" style="display: block; background-size: cover;object-fit: cover; background-position: top;">                        
                    </div><br>
                    <input type="submit" value="Edit" class="btn btn-primary px-4">
                </form>
            </div>
        </div>
        <!-- [ Main Content ] end -->

    </div>
</section>

<%- include('footer') %>
